<!DOCTYPE html>
<html lang="en">

<head>
{{> header}}
</head>

<body class="fix-header fix-sidebar card-no-border">
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    {{> preloader}}
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        {{> topbar}}
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        {{> navbar}}
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-6 col-8 align-self-center">
                        <h3 class="text-themecolor m-b-0 m-t-0">Users</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Users</li>
                        </ol>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Row -->
                {{!-- Start of Notifikasi --}}
                {{#if sessionFlash.message}}
                    <div class="alert alert-danger"> 
                        {{sessionFlash.message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                    </div>
                {{/if}}
                {{#if sessionFlash2.message}}
                    <div class="alert alert-success"> 
                        {{sessionFlash2.message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                    </div>
                {{/if}}
                {{!-- End of Notifikasi --}}
                {{!-- start of row --}}
                {{#if data}}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card card-outline-info">
                            <div class="card-header">
                                <h4 class="m-b-0 text-white">Form Users</h4>
                            </div>
                            <div class="card-block">
                                {{!-- Start of tabel list users --}}
                                <h4 class="card-title">List User</h4>
                                <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                                <hr>
                                <div class="table-responsive m-t-40">
                                    <table id="listUsers" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th class="text-center">No.</th>
                                                <th class="text-center notexport">Aksi</th>
                                                <th class="text-center">NIM</th>
                                                <th class="text-center">Username</th>
                                                <th class="text-center">Nama</th>
                                                <th class="text-center">Email</th>
                                                <th class="text-center">No Telepon</th>
                                                <th class="text-center">Tempat Lahir</th>
                                                <th class="text-center">Tanggal Lahir</th>
                                                <th class="text-center">Alamat</th>
                                                <th class="text-center">Fakultas</th>
                                                <th class="text-center">Program Studi</th>
                                                <th class="text-center">No SIP</th>
                                                <th class="text-center">No STR</th>
                                                <th class="text-center">Tipe Akun</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th class="text-center">No.</th>
                                                <th class="text-center notexport">Aksi</th>
                                                <th class="text-center">NIM</th>
                                                <th class="text-center">Username</th>
                                                <th class="text-center">Nama</th>
                                                <th class="text-center">Email</th>
                                                <th class="text-center">No Telepon</th>
                                                <th class="text-center">Tempat Lahir</th>
                                                <th class="text-center">Tanggal Lahir</th>
                                                <th class="text-center">Alamat</th>
                                                <th class="text-center">Fakultas</th>
                                                <th class="text-center">Program Studi</th>
                                                <th class="text-center">No SIP</th>
                                                <th class="text-center">No STR</th>
                                                <th class="text-center">Tipe Akun</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            {{#each data}}
                                            <tr>
                                                <td>{{counter @index}}</td>
                                                <td class="text-center notexport">
                                                    {{#compare utipe 'mahasiswa' operator="!="}}
                                                    <a href="javascript:void(0);" class=""><button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn edit" data-toggle="tooltip" data-original-title="Ubah" data-id="{{ id }}" data-username="{{ uname }}" data-email="{{ uemail }}" data-nama="{{ unama }}" data-telepon="{{ uphone }}" data-tempatlahir="{{ utempat_lahir }}" data-tanggallahir="{{formatDateDefault utanggal_lahir }}" data-alamat="{{ ualamat }}" data-tipe="{{ utipe }}"><i class="fa fa-pencil" aria-hidden="true"></i></button></a>
                                                    
                                                    <a href="javascript:void(0);" class=""><button type="button" class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn delete" data-toggle="tooltip" data-original-title="Hapus" data-id="{{ id }}" data-nama="{{ unama }}"><i class="fa fa-trash" aria-hidden="true"></i></button></a>
                                                    {{/compare}}
                                                </td>
                                                <td>{{ unim }}</td>
                                                <td>{{ uname }}</td>
                                                <td>{{loud unama }}</td>
                                                <td>{{ uemail }}</td>
                                                <td>{{ uphone }}</td>
                                                <td>{{ utempat_lahir }}</td>
                                                {{#if utanggal_lahir}} <td>{{formatDate utanggal_lahir }}</td> {{else}} <td></td> {{/if}}
                                                <td>{{ ualamat }}</td>
                                                <td>{{ ufakultas }}</td>
                                                <td>{{ uprodi }}</td>
                                                <td>{{ uno_sip }}</td>
                                                <td>{{ uno_str }}</td>
                                                <td>{{loud utipe}}</td>
                                                
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                {{!-- end of tabel list users --}}
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- start of modal update users --}}
                <form action="/auth/edit" method="POST">
                    <div class="modal fade" id="modalEditusers" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="exampleModalLabel1">Ubah Data User</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="modalusername" class="control-label">Username:</label>
                                        <input type="text" class="form-control modalusername" id="modalusername" name="modalusername">
                                        <input type="hidden" class="form-control modalid" id="modalid" name="modalid">
                                    </div>
                                    <div class="form-group">
                                        <label for="modalemail" class="control-label">Email:</label>
                                        <input type="email" class="form-control modalemail" id="modalemail" name="modalemail">
                                    </div>
                                    <div class="form-group">
                                        <label for="modalnama" class="control-label">Nama User:</label>
                                        <input type="text" class="form-control modalnama" id="modalnama" name="modalnama">
                                    </div>
                                    <div class="form-group">
                                        <label for="modaltelepon" class="control-label">No Telepon:</label>
                                        <input type="number" class="form-control modaltelepon" id="modaltelepon" name="modaltelepon">
                                    </div>
                                    <div class="form-group">
                                        <label for="modaltempatlahir" class="control-label">Tempat Lahir:</label>
                                        <input type="text" class="form-control modaltempatlahir" id="modaltempatlahir" name="modaltempatlahir">
                                    </div>
                                    <div class="form-group">
                                        <label for="modaltanggallahir" class="control-label">Tanggal Lahir:</label>
                                        <input type="date" class="form-control modaltanggallahir" id="modaltanggallahir" name="modaltanggallahir">
                                    </div>
                                    <div class="form-group">
                                        <label for="modalalamat" class="control-label">Alamat:</label>
                                        <textarea class="form-control modalalamat" name="modalalamat" id="modalalamat" cols="30" rows="10" ></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="modaltipe" class="control-label">Tipe Akun:</label>
                                        <select class="select2 modaltipe" id="modaltipe" name="modaltipe" style="width: 100%" required>
                                            <option value="-- Pilih Account Type --">-- Pilih Account Type --</option>
                                            <option value="admin">Admin</option>
                                            <option value="psikolog">Psikolog</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="reset" class="btn btn-warning" data-dismiss="modal">Batal</button>
                                    <button type="submit" class="btn btn-success">Ubah</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end of modal update users -->
                <!-- start of modal delete users -->
                <form action="/auth/delete" method="post">
                    <div class="modal fade" id="modalHapususers" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" id="exampleModalLabel1">Hapus Data User</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <strong>Anda yakin mau menghapus user <label class="font-weight-bold judul"></label>?</strong>
                                    <input type="hidden" class="form-control modalidhapus" id="modalidhapus" name="modalidhapus">
                                </div>
                                <div class="modal-footer">
                                    <button type="reset" class="btn btn-warning" data-dismiss="modal">Batal</button>
                                    <button type="submit" class="btn btn-danger">Hapus</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end of modal delete users -->
                {{!-- start of row --}}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-block">
                                {{!-- start of form tambah data psikolog --}}
                                <form action="/auth/reg" method="POST">
                                    <div class="form-body">
                                        <h4 class="card-title">Form Input Data User</h4>
                                        <hr>
                                        <!--/row-->
                                        <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Username</label>
                                                    <input type="text" id="username" name="username" class="form-control" placeholder="Username">
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Email</label>
                                                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required="required">
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!--/row-->
                                        <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Nama</label>
                                                    <input type="text" id="nama" name="nama" class="form-control" placeholder="Nama" required="required">
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">No Telepon</label>
                                                    <input type="text" id="telp" name="telp" class="form-control" placeholder="No Telepon">
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!--/row-->
                                        <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Tempat Lahir</label>
                                                    <input type="text" id="tempatlahir" name="tempatlahir" class="form-control" placeholder="Tempat Lahir">
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Tanggal Lahir</label>
                                                    <input type="date" id="tanggallahir" name="tanggallahir" class="form-control" placeholder="Tanggal Lahir">
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!--/row-->
                                        {{!-- <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">No SIP</label>
                                                    <input type="text" id="sip" name="sip" class="form-control" placeholder="No SIP">
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">No STR</label>
                                                    <input type="text" id="str" name="str" class="form-control" placeholder="No STR">
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div> --}}
                                        <!--/row-->
                                        <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Alamat</label>
                                                    <textarea name="alamat" id="alamat" rows="10" class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Account Type</label>
                                                    <select class="select2" id="tipeakun" name="tipeakun" style="width: 100%" required>
                                                        <option value="0">-- Pilih Account Type --</option>
                                                        <option value="admin">Admin</option>
                                                        <option value="psikolog">Psikolog</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!--/row-->
                                        <div class="row p-t-20">
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Password</label>
                                                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="required">
                                                </div>
                                            </div>
                                            <!--/span-->
                                             <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Konfirmasi Password</label>
                                                    <input type="password" id="password2" name="password2" class="form-control" placeholder="Konfirmasi Password" required="required">
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-actions text-right">
                                        <button type="submit" class="btn btn-block btn-outline-success"> <i class="fa fa-check"></i> Simpan</button>
                                        <button type="reset" class="btn btn-block btn-outline-warning">Batal</button>
                                    </div>
                                </form>
                                {{!-- end of form tambah data psikolog --}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                {{!-- end of row --}}
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            {{> footer}}
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    {{> plugins}}
    <script src="/js/client/datatable/users.js"></script>
    <script src="/js/client/modal/users.js"></script>
</body>

</html>
